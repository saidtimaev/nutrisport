{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {'label': 'Nom d\'utilisateur'}) }}
        {{ form_row(registrationForm.email, {'label': 'Adresse e-mail'}) }}
        {{ form_row(registrationForm.password) }}
        {{ form_row(registrationForm.agreeTerms, { 
            'label_html': true,
            'label': 'En cochant cette case vous confirmez que vous acceptez nos <a href="">conditions générales</a>' 
        }) }}

        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
